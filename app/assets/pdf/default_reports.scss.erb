@font-face {
  font-family: 'Sukar';
  font-style: normal;
  font-weight: bold;
  src: url('<%= asset_data_uri('sukar/Sukar-Regular.otf') %>')
}

body {
  margin: 0;
  height: 100%;
  position: absolute;
  width: 100%;
  font-family: 'Inter var,ui-sans-serif,system-ui,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol,Noto Color Emoji';
}

// fixes brackets with Arabic text
.direction-rtl {
  direction: rtl;
}

// header styles
.header {
  border-collapse: collapse;
  width: 100%
}

.title {
  color: #3fc8a0;
  font-weight: bold;
  font-size: 22px;
}

.logo-box {
  text-align: left;
  display: inline-block;
}

.logo {
  width: 100%;
  max-width: 50px;
  float: left;
}

.mrsool-info {
  text-align: right;
  color: #9da3a8
}

.header-box-left {
  text-align: left;
  padding: 10px;
  padding-bottom: 20px;
  border: 2px solid #ebebeb;
  width: 500px;
  float: left;
}

.header-box-right {
  text-align: left;
  padding: 10px;
  border: 2px solid #ebebeb;
  width: 500px;
  float: right;
}

.header-box-left > div {
  height: 50px;
  margin-bottom: 20px;
}

.header-box-right > div {
  height: 50px;
  margin-bottom: 20px;
}

.space-box {
  width: 40px;
}

// content styles
.content-table {
  border: 2px solid #ebebeb;
  width: 100%;
  border-collapse: collapse;
  margin-top: 30px;
}

.text-right {
  padding-right: 15px;
  font-size: 17px;
  text-align: right;
}

.text-left-footer-title {
  padding-left: 15px;
  font-size: 17px;
  text-align: left;
  font-weight: bold;
}

.text-right-footer-title {
  padding-right: 15px;
  font-size: 17px;
  text-align: right;
  font-size: 20px;
}

.text-left {
  padding-left: 15px;
  font-size: 17px;
  text-align: left;
}

.text-right-grey {
  padding-right: 15px;
  text-align: right;
  font-size: 17px;
  color: #9d9d9d
}

.text-left-grey {
  padding-left: 15px;
  text-align: left;
  font-size: 17px;
  color: #9d9d9d
}

.content-table > thead > tr > th {
  background-color: #f2f2f2;
  height: 70px;
}

.content-table > tbody > tr {
  border: 2px solid #ebebeb;
  height: 70px;
}

.content-table > tfoot > tr {
  background-color: #f2f2f2;
  height: 50px;
}

// business summary reports (invoice & orders)

.business-summary {
  .title {
    color: #000000;
    text-align: center;
    font-size: 18px;
  }

  span {
    color: #A7A9AC;
  }

  table {
    border-radius: 1em;
    overflow: hidden;
    border: none;
    tr {
      height: 57px;
      border: none;
      &:nth-child(even) {
        background: #F9F9F9;
      }

      &.sub-total {
        background: #E5F4FF;
        border-bottom: 1px solid #D7DADE;
        td {
          color: #007CD6;
          font-weight: bold;
        }
        span {
          color: #49ABF2;
        }
      }
    }

    td {
      color: #000000;
      text-align: center;
    }

    thead {
      tr {
        height: 60px;
      }

      th {
        background-color: #F9F9F9;
        color: #000000;
        font-weight: bold;
        font-size: 15px;
      }

    }

    tfoot {
      tr {
        height: 67px;
      }

      td {
        background-color: #00BF6F;
        color: #FFFFFF;
        font-weight: bold;
        font-size: 20px;
      }
      span{
        color: #FFFFFF;
      }
    }
  }
}

// footer styles

.footer-table {
  border: 2px solid #00BF6F;
  width: 100%;
  border-collapse: collapse;
  margin-top: 30px;
}

.footer-table > thead > tr > th {
  padding-right: 15px;
  padding-left: 15px;
  background-color: #00BF6F;
  height: 70px;
  color: white;
}

.footer-table > tbody > tr {
  border: 2px solid #00BF6F;
  height: 50px;
}
.footer-table > tbody > tr :nth-child(3) {
  color: #00BF6F;
}

.footer-grid {
  margin-top: 30px;
  width: 100%;
  border-collapse: collapse;
}

.receipt-note-footer-grid{
margin-top: 110px;
width: 100%;
border-collapse: collapse;
}

.footer-address-grid {
  width: 100%;
  border-collapse: collapse;
}

.footer-address-text {
  text-align: center;
  font-size: 13px;
  color: #5B6670;
}

.footer-address-splitter {
  margin: 15px 0;
  border: 1px solid #E5E5E5;
}

// Lead Registration Contract PDF

.contract-table {
  direction: rtl;
  .tab-col{
    width: 50%;
    vertical-align: top;
  }
}

.text-center {
  text-align: center;
}

.no-page-break {
  page-break-inside: avoid;
}

.page-break {
  display:block;
  clear:both;
  page-break-after: always;
}

.contract-detail-table {
  border-collapse: collapse;
  page-break-inside: avoid;

  tr {
    border: 1px solid #000000;
    th {
      border: 1px solid #000000;
      padding: 4px;
    }

    td {
      text-align: center;
    }
  }

  .left-text {
    padding-left: 15px;
    font-size: 17px;
    text-align: left;
  }
}

.table-one {
  width: 100%;
  td {
    padding-top: 8px;
    padding-bottom: 8px;
  }
}

.table-two {
  width: 80%;
  margin: 30px auto;
}

.contract-footer {
  .dept {
    font-weight: bold;
    color: #154c79;
    margin-bottom: 0px;
  }
  .address {
    margin-top: 0px;
    margin-bottom: 0px;
  }
}
