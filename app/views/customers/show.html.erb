<h1 class="font-bold text-2xl"><%= @customer.name %></h1>

<hr class="mt-3 mb-7" />

<div class="mx-auto md:w-2/3 w-full">
  <div class="max-w-xl mx-auto">
    <div class="bg-white max-w-2xl shadow overflow-hidden sm:rounded-lg">
      <%= render "show", customer: @customer %>
    </div>

    <%= link_to "Edit customer", edit_customer_path(@customer), class: "rounded-lg font-medium w-full sm:w-auto px-5 py-2 my-3 text-center text-white bg-green-700 inline-block font-medium" %>

    <%= link_to "Back to customers", customers_path, class: "rounded-lg font-medium w-full sm:w-auto px-5 py-2 my-3 text-center bg-gray-100 inline-block font-medium" %>
  </div>
</div>
