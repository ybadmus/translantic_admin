<h1 class="font-bold text-2xl"><%= @quote.total_gross_weight %> kg Quote</h1>

<hr class="mt-3 mb-7" />

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="bg-white max-w-2xl shadow overflow-hidden sm:rounded-lg">
      <%= render "show", quote: @quote %>
    </div>

    <%= link_to "Edit quote", edit_quote_path(@quote), class: "rounded-lg font-medium w-full sm:w-auto px-5 py-2 my-3 text-center text-white bg-green-700 inline-block font-medium" %>

    <%= link_to "Back to quotes", quotes_path, class: "rounded-lg font-medium w-full sm:w-auto px-5 py-2 my-3 text-center bg-gray-100 inline-block font-medium" %>
  </div>
</div>
