<div id="<%= dom_id shipment %>">
  <% if action_name != "show" %>
    <%= link_to "Show this shipment", shipment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this shipment", edit_shipment_path(shipment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
