<h1 class="font-bold text-2xl">Order #: <%= @shipment.tracking_number %></h1>

<hr class="mt-3 mb-3" />

<div class="flex flex-wrap gap-4 justify-center">
  <%= render partial: 'show', locals: { shipment: @shipment } %>
</div>

<hr class="mt-3 mb-3" />

<%= link_to "Edit shipment", edit_shipment_path(@shipment), class: "rounded font-medium w-full sm:w-auto px-5 py-2 mb-1 text-center text-white bg-green-700 inline-block text-sm font-medium" %>

<%= link_to "Back to shipments", shipments_path, class: "rounded font-medium w-full sm:w-auto px-5 py-2 text-center bg-gray-100 inline-block text-sm font-medium" %>
